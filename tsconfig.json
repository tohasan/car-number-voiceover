{
    "extends": "@eigenspace/codestyle/configs/typescript/base.tsconfig",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "out-tsc",
        "declaration": false,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2020"
        ]
    },
    "include": [
        "src"
    ]
}
